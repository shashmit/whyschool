---
// Photo Scroll Section Component
// Neo-Brutalist Redesign with CSS Marquee

const teamMembers = [
  {
    name: "Ritik Prajjwal Sahu",
    role: "FOUNDER",
    subRole: "NIT Rourkela",
    image: "https://pasjrtnci5ayebee.public.blob.vercel-storage.com/images/people/founder.jpeg",
    color: "bg-neo-yellow",
    rotate: "rotate-1"
  },
  {
    name: "Anwesha Swain",
    role: "THE MARKETER",
    subRole: "BlackRock",
    image: "https://pasjrtnci5ayebee.public.blob.vercel-storage.com/images/people/anwesha",
    color: "bg-neo-pink",
    rotate: "rotate-2"
  },
  {
    name: "Alankrita Yadav",
    role: "STRATEGY",
    subRole: "INSEAD",
    image: "https://pasjrtnci5ayebee.public.blob.vercel-storage.com/images/people/WhatsApp%20Image%202025-11-05%20at%2000.27.09.jpeg",
    color: "bg-neo-green",
    rotate: "-rotate-1"
  },
  {
    name: "Pritesh Raj",
    role: "RESEARCH",
    subRole: "DRDO ISRO",
    image: "https://pasjrtnci5ayebee.public.blob.vercel-storage.com/images/people/WhatsApp%20Image%202025-11-04%20at%2019.20.31.jpeg",
    color: "bg-neo-orange",
    rotate: "rotate-1"
  }
];

// Duplicate list for seamless loop
const marqueeList = [...teamMembers, ...teamMembers];
---

<section id="photoScrollSegment" class="bg-neo-white py-16 md:py-24 border-t-4 border-black overflow-hidden">
  <div class="max-w-8xl mx-auto mb-12 px-4 text-center">
    <div class="inline-block relative group">
      <div class="absolute inset-0 bg-black translate-x-2 translate-y-2 rounded-full"></div>
      <div class="relative px-8 py-3 bg-neo-purple border-3 border-black rounded-full text-white font-black text-xl tracking-wider transform transition-transform group-hover:-translate-y-1">
        ðŸ“· TEAM GALLERY
      </div>
    </div>
    <h3 class="text-5xl sm:text-7xl font-black text-black mt-8 uppercase tracking-tight">
      Meet The <span class="text-neo-pink underline decoration-4 decoration-black underline-offset-4">Squad</span>
    </h3>
  </div>

  <!-- Marquee Container -->
  <div class="relative w-full py-10">
    <!-- Gradient Masks for smooth fade edges -->
    <div class="absolute left-0 top-0 bottom-0 w-16 sm:w-32 bg-gradient-to-r from-neo-white to-transparent z-20 pointer-events-none"></div>
    <div class="absolute right-0 top-0 bottom-0 w-16 sm:w-32 bg-gradient-to-l from-neo-white to-transparent z-20 pointer-events-none"></div>

    <!-- Scrolling Track -->
    <div class="marquee-container flex overflow-hidden select-none">
      <div class="marquee-track flex gap-8 sm:gap-12 py-4 pl-4">
        {marqueeList.map((member, index) => (
          <div class="group relative flex-none w-[300px] sm:w-[350px] md:w-[400px] perspective-1000">
            
            <!-- Card Body -->
            <div class={`
              relative bg-white border-4 border-black p-3 
              transform transition-all duration-500 ease-out
              group-hover:scale-105 group-hover:-translate-y-4 group-hover:rotate-0 group-hover:z-10
              shadow-[8px_8px_0px_0px_rgba(0,0,0,1)] group-hover:shadow-[16px_16px_0px_0px_rgba(0,0,0,1)]
              ${index % 2 === 0 ? 'rotate-1' : '-rotate-1'}
            `}>
              
              <!-- Image Container -->
              <div class="relative aspect-[4/5] overflow-hidden border-3 border-black bg-gray-200">
                <img 
                  src={member.image} 
                  alt={member.name} 
                  class="w-full h-full object-cover grayscale group-hover:grayscale-0 transition-all duration-500 scale-100 group-hover:scale-110"
                  loading="lazy"
                />
                <!-- Glitch Overlay Effect on Hover -->
                <div class="absolute inset-0 bg-neo-purple mix-blend-overlay opacity-0 group-hover:opacity-20 transition-opacity duration-300"></div>
              </div>

              <!-- Info Box (Trading Card Style) -->
              <div class="mt-4 space-y-2">
                <div class="flex justify-between items-start">
                  <h4 class="text-2xl font-black text-black uppercase leading-none break-words max-w-[70%]">
                    {member.name}
                  </h4>
                  <div class={`px-2 py-1 border-2 border-black text-xs font-bold uppercase ${member.color}`}>
                    {member.role}
                  </div>
                </div>
                <div class="flex items-center gap-2">
                  <span class="w-2 h-2 bg-black rounded-full"></span>
                  <p class="text-sm font-bold text-gray-600 uppercase tracking-wide">
                    {member.subRole}
                  </p>
                </div>
              </div>

              <!-- Decorative Corner Elements -->
              <div class="absolute top-2 right-2 w-3 h-3 border-t-2 border-r-2 border-black"></div>
              <div class="absolute bottom-2 left-2 w-3 h-3 border-b-2 border-l-2 border-black"></div>

            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>

<style>
  .marquee-container:hover .marquee-track {
    animation-play-state: paused;
  }

  .marquee-track {
    width: max-content;
    animation: scroll 40s linear infinite;
  }

  @keyframes scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  /* Mobile Optimization */
  @media (max-width: 640px) {
    .marquee-track {
      animation-duration: 30s; /* Faster on mobile */
    }
  }

  /* Reduce motion preference */
  @media (prefers-reduced-motion: reduce) {
    .marquee-track {
      animation: none;
      overflow-x: auto;
    }
  }
</style>
