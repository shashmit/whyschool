<style>
  /* Pinned horizontal scroll styles */
  .pinned-horizontal-wrapper {
    position: relative;
  }
  #unifiedHorizontalSection {
    position: relative;
  }
  #unifiedHorizontalSection.is-pinned {
    position: fixed;
    inset: 0;
    height: 100vh;
    width: 100vw;
    overflow: hidden;
  }
  /* Exit state: anchor section to wrapper bottom to ensure smooth handoff */
  #unifiedHorizontalSection.is-exiting {
    position: absolute;
    top: auto;
    bottom: 0;
    height: 100vh;
    width: 100vw;
    overflow: hidden;
  }
  #horizontalContainer {
    height: 100%;
    will-change: transform;
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .pinned-horizontal-wrapper {
      height: auto !important;
    }
    #unifiedHorizontalSection {
      position: relative !important;
      height: auto !important;
      min-height: auto !important;
      padding-top: 2rem;
      padding-bottom: 2rem;
    }
    /* Force any pinned/exit styles to be neutralized on mobile */
    #unifiedHorizontalSection.is-pinned,
    #unifiedHorizontalSection.is-exiting {
      position: relative !important;
      inset: auto !important;
      top: auto !important;
      bottom: auto !important;
      height: auto !important;
      width: 100% !important;
      overflow: visible !important;
    }
    #horizontalContainer {
      flex-direction: column;
      overflow-x: hidden;
      height: auto;
      transform: none !important;
    }
    #horizontalContainer > div {
      width: 100% !important;
      height: auto !important;
      min-height: auto !important;
    }
  }
</style>

<script>
  // Pinned horizontal scroll: map vertical scroll within wrapper to horizontal translate
  document.addEventListener('DOMContentLoaded', () => {
    const wrapper = document.querySelector('.pinned-horizontal-wrapper');
    const section = document.getElementById('unifiedHorizontalSection');
    const container = document.getElementById('horizontalContainer');
    const totalPanels = 3;

    // Mobile fallback: do nothing special
    const isMobile = () => window.innerWidth <= 768;
    
    const setWrapperHeight = () => {
      if (!wrapper) return;
      if (isMobile()) {
        wrapper.style.height = 'auto';
      } else {
        // Total scrollable distance equals (totalPanels * 100vh)
        // This reserves enough space for pin period; the final viewport is handled by exit state
        wrapper.style.height = `${totalPanels * 100}vh`;
      }
    };

    const updateIndicatorsByProgress = (progress) => {
      // progress: 0..1 across all panels
      const step = 1 / (totalPanels - 1);
      const activeIndex = Math.round(progress / step);
      for (let i = 0; i < totalPanels; i++) {
        const indicator = document.getElementById(`indicator-${i}`);
        if (!indicator) continue;
        if (i === activeIndex) {
          indicator.classList.remove('w-2', 'h-2', 'bg-gray-400');
          indicator.classList.add('w-3', 'h-3', 'bg-orange-500');
        } else {
          indicator.classList.remove('w-3', 'h-3', 'bg-orange-500');
          indicator.classList.add('w-2', 'h-2', 'bg-gray-400');
        }
      }
    };

    const handleScroll = () => {
      if (!wrapper || !section || !container || isMobile()) {
        // Ensure section is not pinned on mobile
        section.classList.remove('is-pinned');
        section.classList.remove('is-exiting');
        if (wrapper) wrapper.style.height = 'auto';
        container.style.transform = 'none';
        updateIndicatorsByProgress(0);
        return;
      }

      const viewportH = window.innerHeight;
      const wrapperRect = wrapper.getBoundingClientRect();
      const wrapperTop = wrapperRect.top;
      const wrapperBottom = wrapperRect.bottom;
      const wrapperHeight = wrapper.offsetHeight; // should be totalPanels * viewportH

      // Active range: pin while wrapper spans full viewport height
      const isActive = wrapperTop <= 0 && wrapperBottom >= viewportH;
      if (isActive) {
        // Pin the section
        section.classList.add('is-pinned');
        section.classList.remove('is-exiting');

        // Compute vertical progress within wrapper (exclude last viewport to allow exit)
        const totalScrollable = wrapperHeight - viewportH; // distance while pinned
        const currentScroll = Math.min(Math.max(-wrapperTop, 0), totalScrollable);
        const progress = totalScrollable > 0 ? currentScroll / totalScrollable : 0; // 0..1

        // Map to horizontal translate (in px for precision)
        const maxTranslatePx = (totalPanels - 1) * window.innerWidth; // e.g., 2 * 100vw
        const translatePx = -progress * maxTranslatePx;
        container.style.transform = `translateX(${translatePx}px)`;

        updateIndicatorsByProgress(progress);
      } else {
        // Outside active range: determine pre, exit, or past states
        section.classList.remove('is-pinned');
        const maxTranslatePx = (totalPanels - 1) * window.innerWidth;

        if (wrapperTop > 0) {
          // Before entering: reset
          section.classList.remove('is-exiting');
          container.style.transform = 'translateX(0px)';
          updateIndicatorsByProgress(0);
        } else if (wrapperBottom > 0 && wrapperBottom < viewportH) {
          // Exit zone: anchor to bottom of wrapper to prevent vanish and ensure handoff
          section.classList.add('is-exiting');
          container.style.transform = `translateX(${-maxTranslatePx}px)`;
          updateIndicatorsByProgress(1);
        } else {
          // Past the section: fully released
          section.classList.remove('is-exiting');
          container.style.transform = `translateX(${-maxTranslatePx}px)`;
          updateIndicatorsByProgress(1);
        }
      }
    };

    const onResize = () => {
      setWrapperHeight();
      handleScroll();
    };

    setWrapperHeight();
    handleScroll();
    window.addEventListener('scroll', handleScroll, { passive: true });
    window.addEventListener('resize', onResize);
  });
</script>
