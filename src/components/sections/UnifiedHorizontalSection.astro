    will-change: transform;
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .sticky-horizontal-wrapper {
      height: auto !important;
    }
    
    #unifiedHorizontalSection {
      position: relative !important;
      height: auto !important;
      min-height: 100vh;
    }
    
    #horizontalContainer {
      flex-direction: column;
      height: auto;
    }
    
    #horizontalContainer > div {
      width: 100% !important;
      height: auto !important;
      min-height: 100vh;
    }
  }
</style>

<script>
  class StickyHorizontalScroll {
    constructor() {
      this.wrapper = document.querySelector('.sticky-horizontal-wrapper');
      this.section = document.getElementById('unifiedHorizontalSection');
      this.container = document.getElementById('horizontalContainer');
      this.totalPanels = 3;
      this.currentProgress = 0;
      this.isActive = false;
      
      if (this.wrapper && this.section && this.container) {
        this.init();
      }
    }

    init() {
      this.setupScrollListener();
      this.updateIndicators();
    }

    setupScrollListener() {
      let ticking = false;

      window.addEventListener('scroll', () => {
        if (!ticking) {
          requestAnimationFrame(() => {
            this.handleScroll();
            ticking = false;
          });
          ticking = true;
        }
      });

      // Touch events for mobile
      let touchStartX = 0;
      let touchStartY = 0;

      this.section.addEventListener('touchstart', (e) => {
        touchStartX = e.touches[0].clientX;
        touchStartY = e.touches[0].clientY;
      });

      this.section.addEventListener('touchend', (e) => {
        const touchEndX = e.changedTouches[0].clientX;
        const touchEndY = e.changedTouches[0].clientY;
        const deltaX = touchStartX - touchEndX;
        const deltaY = touchStartY - touchEndY;

        // Check if horizontal swipe is more significant than vertical
        if (Math.abs(deltaX) > Math.abs(deltaY) && Math.abs(deltaX) > 50) {
          if (deltaX > 0 && this.currentProgress < 1) {
            // Swipe left -> move right
            this.currentProgress = Math.min(1, this.currentProgress + 0.33);
            this.updatePosition();
          } else if (deltaX < 0 && this.currentProgress > 0) {
            // Swipe right -> move left
            this.currentProgress = Math.max(0, this.currentProgress - 0.33);
            this.updatePosition();
          }
        }
      });
    }

    handleScroll() {
      const wrapperRect = this.wrapper.getBoundingClientRect();
      const wrapperHeight = this.wrapper.offsetHeight;
      const viewportHeight = window.innerHeight;
      
      // Check if wrapper is in viewport
      const isInViewport = wrapperRect.top <= 0 && wrapperRect.bottom >= viewportHeight;
      
      if (isInViewport) {
        this.isActive = true;
        
        // Add buffer zones (25% of viewport height) at beginning and end
        const bufferZone = viewportHeight * 0.25;
        const scrollableHeight = wrapperHeight - viewportHeight - (bufferZone * 2);
        const currentScroll = Math.abs(wrapperRect.top);
        const totalScrollableArea = wrapperHeight - viewportHeight;
        
        // Check which zone we're in
        if (currentScroll <= bufferZone) {
          // In start buffer zone - keep first section fully visible
          this.currentProgress = 0;
        } else if (currentScroll >= totalScrollableArea - bufferZone) {
          // In end buffer zone - keep last section fully visible
          this.currentProgress = 1;
        } else {
          // In middle scrollable area - calculate horizontal scroll progress
          const adjustedScroll = currentScroll - bufferZone;
          const scrollProgress = adjustedScroll / scrollableHeight;
          this.currentProgress = Math.max(0, Math.min(1, scrollProgress));
        }
        
        this.updatePosition();
      } else {
        this.isActive = false;
      }
    }

    updatePosition() {
      // Calculate translateX based on progress (0 to -200% for 3 panels)
      const translateX = -this.currentProgress * 200; // 200% for 3 panels
      
      this.container.style.transform = `translateX(${translateX}%)`;
      this.updateIndicators();
    }

    updateIndicators() {
      // Calculate which panel is most visible
      const panelProgress = this.currentProgress * (this.totalPanels - 1);
      const currentPanel = Math.round(panelProgress);
      
      for (let i = 0; i < this.totalPanels; i++) {
        const indicator = document.getElementById(`indicator-${i}`);
        if (indicator) {
          if (i === currentPanel) {
            indicator.className = 'w-3 h-3 bg-orange-500 rounded-full transition-all duration-300';
          } else {
            indicator.className = 'w-2 h-2 bg-gray-400 rounded-full transition-all duration-300';
          }
        }
      }
    }
  }

  // Initialize when DOM is loaded
  document.addEventListener('DOMContentLoaded', () => {
    // Only initialize on desktop
    if (window.innerWidth > 768) {
