<style>
  /* Responsive adjustments for mobile */
  @media (max-width: 640px) {
    #domainCarousel .flex-none {
      width: 100% !important;
    }
  }
  
  @media (min-width: 640px) and (max-width: 1024px) {
    #domainCarousel .flex-none {
      width: 50% !important;
    }
  }
</style>

<script>
  class SimpleCarousel {
    constructor() {
      this.currentIndex = 0;
      this.totalSlides = 4;
      this.autoScrollInterval = null;
      this.init();
    }
    
    init() {
      this.carousel = document.getElementById('domainCarousel');
      
      if (!this.carousel) return;
      
      this.setupEventListeners();
      this.updateCarousel();
      this.setupAutoScroll();
    }
    
    setupEventListeners() {
      // Handle window resize to update carousel layout
      window.addEventListener('resize', () => {
        this.updateCarousel();
        this.setupAutoScroll(); // Restart auto-scroll on resize
      });
    }
    
    setupAutoScroll() {
      // Clear existing interval
      if (this.autoScrollInterval) {
        clearInterval(this.autoScrollInterval);
        this.autoScrollInterval = null;
      }
      
      // Only enable auto-scroll on mobile devices
      const isMobile = window.innerWidth < 640;
      
      if (isMobile) {
        this.autoScrollInterval = setInterval(() => {
          this.goToNext();
        }, 3000); // Auto-advance every 3 seconds on mobile
      }
    }
    
    goToNext() {
      this.currentIndex = this.currentIndex === this.totalSlides - 1 ? 0 : this.currentIndex + 1;
      this.updateCarousel();
    }
    
    updateCarousel() {
      if (!this.carousel) return;
      
      // Calculate transform based on current index and responsive breakpoints
      const isMobile = window.innerWidth < 640;
      const isTablet = window.innerWidth >= 640 && window.innerWidth < 1024;
      
      let translateX;
      if (isMobile) {
        translateX = -this.currentIndex * 100; // 100% per slide on mobile
      } else if (isTablet) {
        translateX = -this.currentIndex * 50; // 50% per slide on tablet
      } else {
        translateX = -this.currentIndex * 25; // 25% per slide on desktop
      }
      
      this.carousel.style.transform = `translateX(${translateX}%)`;
    }
  }
  
  // Initialize carousel when DOM is loaded
  document.addEventListener('DOMContentLoaded', () => {
    new SimpleCarousel();
  });
</script>